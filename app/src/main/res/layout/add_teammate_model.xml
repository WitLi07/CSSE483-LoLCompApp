<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/add_teammate_model_title"
        style="@style/textview_style"
        android:text="Add a TeamMate"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/add_teammate_model_name"
        style="@style/textview_style"
        android:layout_above="@id/add_teammate_edit_text"

        android:text="Find A TeamMate"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_teammate_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:inputType="text" />
</RelativeLayout>