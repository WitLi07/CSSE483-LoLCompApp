<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Team Page"
        android:textSize="20sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_title"
        android:columnCount="4"
        android:rowCount="6">

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Player Name" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Lane" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="Champions" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="Profile Details" />

        <!--    1st Row    -->

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Koko6015" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Top" />

        <GridLayout
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />
        </GridLayout>

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:text="Link" />

        <!--    2nd Row    -->

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Koko6015" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Top" />

        <GridLayout
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />
        </GridLayout>

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:text="Link" />

        <!--    3rd Row    -->

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="Koko6015" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="Top" />

        <GridLayout
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />
        </GridLayout>

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:text="Link" />

        <!--    4th Row    -->

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Koko6015" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="70dp"
            android:layout_row="4"
            android:layout_column="1"
            android:text="Top" />

        <GridLayout
            android:layout_row="4"
            android:layout_column="2"
            android:layout_gravity="center"
            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />
        </GridLayout>

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="4"
            android:layout_column="3"
            android:text="Link" />

        <!--    5th Row    -->

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="5"
            android:layout_column="0"
            android:text="Koko6015" />

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="70dp"
            android:layout_row="5"
            android:layout_column="1"
            android:text="Top" />

        <GridLayout
            android:layout_row="5"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:padding="10dp"
            android:rowCount="2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question_mark_icon" />
        </GridLayout>

        <TextView
            style="@style/grid_cell_style"
            android:layout_width="100dp"
            android:layout_row="5"
            android:layout_column="3"
            android:text="Link" />
    </GridLayout>

    <Button
        android:id="@+id/view_comp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:text="VIEW COMP." />

    <Button
        android:id="@+id/add_teammate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:text="ADD TEAMMATE" />
</RelativeLayout>